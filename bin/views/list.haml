%head 
  %link(type="text/css" rel="stylesheet" href="/css/main.css")

%a(href="/contacts/new") Ajoute un Contact
%table
  %tr
    %th{:width=>"100px;"}
    %th{:width=>"100px;"}
    %th{:width=>"300px;"}
  - cs.each do|c|
    %tr
      %td= c['nom']
      %td= c['tele']
      %td= em(c['CID'])
      %td
        %a.red(href="/contacts/#{c['id']}") Voir
      %td
        %a.blue(href="/contacts/#{c['id']}/edit") Edit
