%h2 "Nouveau Client ##{c['CID']}"
%form(action="#{action}" method="POST")
  %table
    %tr
      %td{:width=>"150px;"}
        %label(for="nom") Nom
      %td{:width=>"150px;"}
        %input(type="text" name="nom" value="#{c['nom']}")
    %tr
      %td
        %label(for="addresse") Nom
      %td
        %input(type="text" name="addresse" value="#{c['addresse']}")
  
    %tr
      %td
        %label(for="tele") Telephone
      %td
        %input(type="text" name="tele" value="#{c['tele']}")
  
  %br
  %input(type="submit" value="Sauve")
  %input(type="reset")

  - unless c['CID'] == 0
    %form(action="/client/#{c['CID']}" method="POST")
      %input(type="submit" value="Oublie")
